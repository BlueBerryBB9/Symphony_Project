{% extends 'base.html.twig' %}

{% block title %}Bonjour !{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 70%;
        width: 70%;
        background: #f8f8f8;
        padding: 3.5em;
        border-radius: 2em;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    .toudou2 {
        word-break: break-all;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        height: 7.5em;
    }

    #home_article {
        border-radius: 1.5em;
        border: solid;
        padding: 2em;
    }

    .home_article {
        word-break: break-all;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        height: 3.5em;
    }
</style>
<div class="example-wrapper">
    {% if app.user %}
    <h1>Bonjour {{ app.user.name }}! </h1>
