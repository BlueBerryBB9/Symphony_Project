{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}

{% block body %}
    <h1>Theme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td class="toudou3">{{ theme.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="toudou3">{{ theme.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_theme_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_theme_edit', {'id': theme.id}) }}">edit</a>
    {% endif %}

    {{ include('theme/_delete_form.html.twig') }}
{% endblock %}
